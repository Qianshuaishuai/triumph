<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.profile.SystemSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:gravity="center_horizontal"
            android:text="SYSTEM SETTINGS"
            android:textColor="#ffffff"
            android:textSize="48dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/audio_level_up"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@mipmap/up" />

                <TextView
                    android:id="@+id/audio_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:gravity="center_horizontal"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="84dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/audio_level_down"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@mipmap/down" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUDIO LEVEL"
                android:textColor="#ffffff"
                android:textSize="32dip"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/brightness_level_up"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@mipmap/up" />

                <TextView
                    android:id="@+id/brightness_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:gravity="center_horizontal"
                    android:text="9"
                    android:textColor="#ffffff"
                    android:textSize="84dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/brightness_level_down"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@mipmap/down" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BRIGHTNESS LEVEL"
                android:textColor="#ffffff"
                android:textSize="32dip"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/count_down_up"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@mipmap/up" />

                <TextView
                    android:id="@+id/count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:gravity="center_horizontal"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="84dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/count_down_down"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@mipmap/down" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COUNTDOWN TIME"
                android:textColor="#ffffff"
                android:textSize="32dip"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="15dip">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO BACK"
            android:textColor="#ffffff"
            android:textSize="24dip"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="CONFIRM"
            android:textColor="#ffffff"
            android:textSize="24dip"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>