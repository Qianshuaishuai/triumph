<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.babyraising.triumph">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".TriumphApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ui.profile.ModeSelectActivity"></activity>
        <activity
            android:name=".ui.main.MotorSetupActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.profile.ModeActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.other.InfoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.profile.SystemSettingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.profile.SettingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.other.AboutActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.other.HelpActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.other.ContactActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.main.ShutDownActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.main.StopActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.user.UserProfileActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.user.ForgetActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.user.SignInActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.user.RegisterActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".ui.main.WelcomeActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>